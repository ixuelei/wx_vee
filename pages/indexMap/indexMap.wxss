.top{
  height: 265rpx;
  width: 100%;
  background: #4F87FE;
  background-image:url("https://cshd.yusong.com.cn/static/images/img/bannerBg.png");
  background-repeat:no-repeat; 
  background-size:100% 100%;
  color: #fff;
  position: relative;
}
.top .top-1{
  display: flex;
  padding: 20rpx 40rpx;
}
.top-name{
  display: block;
  font-size: 40rpx;
}
.top-name text{
  font-size: 30rpx;
  padding: 0 20rpx;
  color: red;

}
.top image{
  width: 123rpx;
  height: 123rpx;
  border-radius: 50%;
}
.top .top-1-2:nth-child(2){
  font-size: 35rpx;
  padding: 0 20rpx;
}
.top-2{
  display: flex;
  position: absolute;
  bottom: 0rpx;
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  font-size: 30rpx;
  background: rgba(0, 67, 211, 0.1)
}
.top-2 text{
  width: 100%;
  text-align: center
}
.top-2:nth-child(2) text text{
  width: 100%;
  display: inline-block;
  height: 58rpx;
  line-height: 58rpx;
  margin-top: 20rpx;
  border-left: 1rpx solid #fff;
  border-right: 1rpx solid #fff;
}
.searchbar-result{
  margin-top: 0rpx;
}
.opt {
  align-items: center;
  font-size: 30rpx;
  color: #333;
  height: 66rpx;
  line-height: 66rpx;
}
.opt image{
  width: 45rpx;
  height: 45rpx;
  vertical-align: middle;
  padding: 2rpx;
}

